<link rel="stylesheet" href="~/css/AppointementLists.css" />
<div class="main_page_app col-12">
    <div class="table_content col-10">
        <h3 class="col-12">Booking Table</h3>
        <table class="table table-bordered col-12">
            <thead>
                <tr>
                    <th scope="col">Booking no.</th>
                    <th scope="col">Doctor Name</th>
                    <th scope="col">Patient Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Time</th>
                </tr>
            </thead>
            <tbody>

                @for (int i = 0; i < Model.Count; i++)
                {
                    <tr>

                        <th scope="row">@(i + 1)</th>
                        <td>@Model[i].Doctor.Name</td>
                        <td>@Model[i].PatientName</td>
                        <td>@Model[i].Date</td>
                        <td>@Model[i].Time</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>